generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// arquivo: schema.prisma

// Definição do modelo Todo
model Todo {
  id        String    @id // Define o campo 'id' como identificador único
  text     String    // Título da tarefa
  completed Boolean    // Indica se a tarefa está completa ou não
}
