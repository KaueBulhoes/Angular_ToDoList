generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Definição do modelo Todo
model Todo {
  id    String @id @default(auto()) @map("_id") @db.ObjectId // Define o campo 'id' como identificador único
  text        String    // Título da tarefa
  completed   Boolean   // Indica se a tarefa está completa ou não
}
